<dl>
  <dt>Evento</dt>
  <dd><%= @expense.title %></dd>

  <dt>Descrição</dt>
  <dd><%= @expense.description %></dd>

  <dt>Data do evento</dt>
  <dd><%= I18n.l(@expense.event_date) %></dd>

  <dt>Data do pagamento</dt>
  <dd><%= I18n.l(@expense.pay_date) %></dd>

  <dt>Valor total</dt>
  <dd><%= number_to_currency(@expense.total_price) %></dd>

  <dt>Número de participantes</dt>
  <dd><%= @expense.participants_amount %></dd>

  <dt>Valor por participante</dt>
  <dd><%= number_to_currency(@expense.pricer_per_participant) %></dd>
</dl>
